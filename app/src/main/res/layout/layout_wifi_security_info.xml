<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_2b353d_16dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi Name"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#858E96"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TB-TeamF-5G"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1AB0B0B0"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv1"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi Max Speed"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#858E96"
            android:layout_marginTop="31dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_max_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TB-TeamF-5G"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tv2"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1AB0B0B0"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv2"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi IP"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#858E96"
            android:layout_marginTop="31dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv2"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wifi_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TB-TeamF-5G"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tv3"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1AB0B0B0"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv3"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi Mac"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#858E96"
            android:layout_marginTop="31dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv3"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wifi_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TB-TeamF-5G"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tv4"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>