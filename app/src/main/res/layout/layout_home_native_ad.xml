<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="211dp"
    android:layout_marginTop="16dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_ffffff_12dp">
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/native_cover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/view"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ad_tag"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/native_cover"/>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/bg_home_ad_bottom"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/native_logo"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/view"
                app:layout_constraintLeft_toLeftOf="@id/view"
                app:layout_constraintBottom_toBottomOf="@id/view"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_install"
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#0E0F11"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_20d8b4_8dp"
                app:layout_constraintTop_toTopOf="@id/view"
                app:layout_constraintRight_toRightOf="@id/view"
                app:layout_constraintBottom_toBottomOf="@id/view"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#383838"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="@id/native_logo"
                app:layout_constraintLeft_toRightOf="@id/native_logo"
                app:layout_constraintRight_toLeftOf="@id/native_install"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#656D73"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toRightOf="@id/native_logo"
                app:layout_constraintTop_toBottomOf="@id/native_title"
                app:layout_constraintRight_toLeftOf="@id/native_install"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ad_default"
        android:scaleType="fitXY"/>
</RelativeLayout>